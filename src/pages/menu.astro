---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavBar from "../components/NavBar.astro";
import MenuSection from "../components/ui/MenuSection.astro";
import MenuCard from "../components/ui/MenuCard.astro";
---

<BaseLayout title="Menú — Comedor Luna">
  <NavBar />
  <main class="container-max py-12">
    <MenuSection title="Entradas" subtitle="Para comenzar la experiencia gastronómica">
      <MenuCard
        name="Empanadas"
        price={2800}
        description="Tradicionales empanadas al horno o fritas con masa casera de carne / jamón y queso / pollo / choclo."
        tags="Especialidad, 6 unidades, 12 unidades" />

      <MenuCard
        name="Tabla de Fiambres"
        price={4200}
        description="Selección de paleta, salame, queso y aceitunas."
        tags="Para compartir, 2 personas" />
    </MenuSection>

    <hr class="border-line my-16" />

    <MenuSection title="Platos Principales" subtitle="Lo más pedido de nuestra cocina">
      <MenuCard
        name="Milanesas"
        price={3000}
        description="De ternera o pollo, napolitana opcional."
        tags="Clásico" />

      <MenuCard
        name="Pastas Caseras"
        price={2800}
        description="Tallarines, ñoquis o ravioles. Salsa a elección: tuco, bolognesa, crema o manteca y salvia."
        tags="Porción abundante" />

      <MenuCard
        name="Carne al Plato"
        price={2500}
        description="Vacio al horno, pollo, cerdo o chivito."
        tags="Tradicional" />

      <MenuCard
        name="Sopa Puchero"
        price={3200}
        description="Caldo con carne y vegetales (papa, zanahoria, zapallo, etc...)" />
    </MenuSection>

    <hr class="border-line my-16" />

    <MenuSection title="Acompañamientos" subtitle="Lo más pedido de nuestra cocina">
      <MenuCard
        name="Ensaladas"
        price={3000}
        description="A tu elección: cebolla, morrones, tomate, lechuga, zanahoria, remolacha, huevo duro, etc..."
        tags="Clásico" />

      <MenuCard
        name="Puré de Papas"
        price={2800}
        description="Puré casero, hecho con papas naturales."
        tags="Porción abundante" />
    </MenuSection>

    <hr class="border-line my-16" />

    <MenuSection title="Postres" subtitle="El final dulce perfecto">
      <MenuCard
        name="Flan Casero"
        price={2800}
        description="Podes pedirlo con dulce de leche, helado o crema."
        tags="Casero" />

      <MenuCard
        name="Alfajores de Maicena"
        price={3200}
        description="Rellenos con dulce de leche repostero."
        tags="Artesanal, 3 unidades" />

      <MenuCard
        name="Helado Artesanal"
        price={3200}
        description="Sabores: dulce de leche, chocolate, frutilla, tramontana, crema americana."
        tags="Artesanal" />
    </MenuSection>

    <hr class="border-line my-16" />

    <MenuSection title="Bebidas" subtitle="Para acompañar cada momento" columns={3}>
      <MenuCard name="Vinos" description="Trapiche, Catena Zapata, Norton, Luigi Bosca, Rutini, Zuccardi, etc..." price="$1.800 / $8.500" tags="Copa, Botella"/>
      <MenuCard name="Cervezas" description="Quilmes, Andes Origen, Patagonia, Imperial, Schneider, etc..." price="$1.500 / $6.800" tags="Botella"/>
      <MenuCard name="Gaseosas" description="Coca-Cola, Pepsi, Sprite, Fanta, Manaos, Paso de los Toros, etc..." price={1200} tags="Botella" />
      <MenuCard name="Aguas saborizadas" description="Levité, Cunnington Fresh, Ser, Aquarius, Glaciar, etc..." price={2200} tags="Botella" />
      <MenuCard name="Aguas minerales / Sodas" description="Villavicencio, Eco de los Andes, Sierra de los Padres, Glaciar, etc..." price={1800} tags="Botella" />
    </MenuSection>
  </main>
</BaseLayout>
